<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_remedies"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_dark_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_remedies_card"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="ITEM TITLE"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/imageview_remedies_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:src="@mipmap/falling_owl" />

        <LinearLayout
            android:id="@+id/linearlayout_remedies_card_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/imagebutton_qty_decrease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="6dp"/>

            <EditText
                android:id="@+id/edittext_remedies_card_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:paddingEnd="6dp"
                android:paddingStart="6dp"/>

            <ImageButton
                android:id="@+id/imagebutton_qty_increase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="6dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_remedies_card_degrees"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/textview_degree_low"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@color/degree_low"
                android:padding="3dp" />

            <TextView
                android:id="@+id/textview_degree_med"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@color/degree_med"
                android:padding="3dp" />

            <TextView
                android:id="@+id/textview_degree_hi"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@color/degree_hi"
                android:padding="3dp" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
