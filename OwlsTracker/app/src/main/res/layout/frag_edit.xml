<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="100dp"
    android:padding="3dp"
    android:layout_gravity="bottom">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <EditText
        android:id="@+id/edittext_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textview_edit_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <NumberPicker
        android:id="@+id/np_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/linearlayout_edit_degrees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:visibility="gone"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textview_degree_low"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@color/degree_low"
            android:padding="2dp" />

        <TextView
            android:id="@+id/textview_degree_med"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@color/degree_med"
            android:padding="2dp" />

        <TextView
            android:id="@+id/textview_degree_hi"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/degree_hi"
            android:padding="2dp" />

    </LinearLayout>

</LinearLayout>


</FrameLayout>